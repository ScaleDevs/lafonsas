generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Delivery {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  store           String
  postingDate     DateTime?
  deliveryNumber  String    @unique
  amount          Int       @db.Int
  badOrder        Int?      @db.Int
  widthHoldingTax Int?      @db.Int
  otherDeduction  Int?      @db.Int
  amountPaid      Int?      @db.Int
  checkNumber     String?
  checkDate       DateTime?
  orders          Order[]
  returnSlip      Order[]
}

type Order {
  size     String
  quantity Int
  price    Int
}
