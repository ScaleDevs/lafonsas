generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Order {
  size     String
  quantity Int
  price    Float
}

type Product {
  size  String
  price Float
}

enum PaymentMode {
  BANK_TRANSFER
  CHEQUE
  CASH
}

model Store {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  isParent    Boolean?
  parentStore String?  @db.ObjectId

  products   Product[]
  deliveries Delivery[]
  payments   Payment[]

  @@index(parentStore)
}

model Delivery {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  postingDate    DateTime
  deliveryNumber String   @unique
  amount         Float
  orders         Order[]
  returnSlip     Order[]
  storeId        String   @db.ObjectId
  paymentId      String?  @db.ObjectId

  store Store @relation(fields: [storeId], references: [id])

  @@index([storeId, paymentId])
  @@index(postingDate)
}

model Account {
  accountId   String    @id @default(auto()) @map("_id") @db.ObjectId
  accountName String
  expenses    Expense[]
}

model Bill {
  billId       String    @id @default(auto()) @map("_id") @db.ObjectId
  vendor       String
  date         DateTime
  invoiceRefNo String    @unique
  amount       Float
  expenses     Expense[]

  @@index([date])
}

model Payment {
  paymentId       String      @id @default(auto()) @map("_id") @db.ObjectId
  storeId         String      @db.ObjectId
  modeOfPayment   PaymentMode
  bankName        String?
  refNo           String      @unique
  refDate         DateTime
  amount          Float
  badOrder        Float
  widthHoldingTax Float
  otherDeductions Float

  store Store @relation(fields: [storeId], references: [id])

  @@index([refDate, storeId])
}

model Expense {
  expenseId   String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  amount      Float
  description String
  accountId   String   @db.ObjectId
  billId      String?  @db.ObjectId

  bill    Bill?   @relation(fields: [billId], references: [billId])
  account Account @relation(fields: [accountId], references: [accountId])

  @@index([accountId])
  @@index([billId])
  @@index([date])
}
